<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"> <%= @campaign.title.upcase%></h1>
    <p class="lead"> Purpose:  <%= @campaign.purpose %></p>
    <p class="lead"> Created by: <%= @campaign.expert.name %></p> 
    <p class="lead"> Duration: <%= @campaign.estimated_time %></p>
      <%= link_to 'Edit',  edit_campaign_url, class:'btn btn-info', id:"action-edit" if policy(@campaign).edit? %> 
      <%= link_to 'Delete', @campaign, class:'btn btn-info', method: :delete, data: { confirm: 'Are you sure?' }if policy(@campaign).destroy?%> 
      <%= link_to 'Back', root_path , class:'btn btn-info' %>
      <%= link_to "Discussion Topics", campaign_discussion_topics_path(@campaign) ,class:'btn btn-info', id:"index_links" %>
  </div>
</div>  

<div>
  <%= render 'do_lists/show'%>

  <div class="container my-5 pb-4">
  <div class="row my-4 mx-1"><h5>Comments: <%= @campaign.comments.count %></h5></div>

  <%= render @campaign.comments %>

  <div class="row my-4 ">
    <%= render 'comments/form' , locals: {commentable: @campaign, type: "Campaign"}%>
  </div>

</div>
