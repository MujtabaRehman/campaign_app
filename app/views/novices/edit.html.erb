<div class="signup_container container">
  <div class="text-center my-2">
  <h2 class="page_heading">Edit Account</h2>
  </div>

  <%= form_with model: @novice do |f| %>
  
  <div class="form-group row mt-5">
    <%= f.label :name, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
     <%= f.text_field :name, class: "form-control",placeholder:"Username"  %>
    </div>
  </div>
  
  <div class="form-group row  ">
   <%= f.label :email, class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control",placeholder:"Email"  %>
    </div>
  </div>

  <% if current_user.type=="Novice" %>
    <div class="form-group row">
      <%= f.label "Password", class:"col-sm-2 col-form-label"  %>
    <div class="col-sm-10">
      <%= f.password_field :password, autocomplete: "new-password",class: "form-control",placeholder:"Password" %>
    </div>
  </div>

   <div class="form-group row">
      <%= f.label "Confirm Password", class:"col-sm-2 col-form-label"  %>
     <div class="col-sm-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control",placeholder:"Confirm Password" %>
    </div>
  </div>
    <% else %>
    <div class="form-group row">
      <%= f.label "Status", class:"col-sm-2 col-form-label"  %>
      <div class="col-sm-10">
        <%= f.select :status, Novice.statuses.keys, {}, class:'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-10">
     <%= f.submit "Update" , class:"btn btn-info" %>      
    </div>
  </div>
<% end %>
</div>